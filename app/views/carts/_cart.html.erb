<%= hide_div_if cart.line_items.empty? do %>
  <div class="cart_title">Your Cart</div>

  <div class="cart-items">
    <%= render cart.line_items %>
  </div>

  <%= button_to "Empty Cart", cart, 
                :method => :delete, 
                :data => {:confirm => "Sure?"}%>

  <%= button_to "Checkout", new_order_url, cart: cart, method: :get %>
  <%= new_order_url %>
  <%= new_order_path %>
<% end %>
